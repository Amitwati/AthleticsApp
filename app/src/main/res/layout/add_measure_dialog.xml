<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:background="@drawable/round"
    android:backgroundTint="@color/colorBright_GREEN">


    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_icon"
            android:layout_alignParentRight="true"
            android:id="@+id/imageView3" />

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            android:tint="@color/colorPrimary_GREEN"/>

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView3"
            android:layout_toStartOf="@+id/imageView3"
            android:text="הוספת מדידה"
            android:textColor="@color/colorPrimary_GREEN"
            android:textSize="20dp"
            android:layout_marginRight="15dp"
            android:textStyle="bold" />


    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="450dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/Comp_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:layout_below="@id/textView2"
                android:layout_centerHorizontal="true"
                />

            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="250dp"
                android:layout_height="350dp"
                android:inputType="date"
                android:layout_marginTop="5dp"
                android:theme="@style/DialogMeasurementTheme"
                android:layout_below="@id/textView2"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="הכנס/י תאריך"
                android:layout_below="@id/Comp_Text"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="163dp"
                tools:layout_editor_absoluteY="33dp"
                android:textColor="@color/colorPrimary_GREEN"/>

            <Button
                android:id="@+id/btn_item"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/datePicker"
                android:layout_centerHorizontal="true"
                android:background="@drawable/round"
                android:backgroundTint="@color/colorPrimary_GREEN"
                android:elevation="15dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:text="הוספה"
                />
        </RelativeLayout>

    </ScrollView>



</RelativeLayout>