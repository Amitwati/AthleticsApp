<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary_GREEN"
        app:titleTextColor="#fff"
        android:elevation="4dp"
        app:theme="@style/ToolbarColoredBackArrow"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_toolbar"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp">



        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            app:srcCompat="@drawable/ic_icon"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <Button
                android:id="@+id/button1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="עריכת תחרויות"
                android:textSize="19dp"
                android:textStyle="bold"
                android:background="@drawable/round"
                android:backgroundTint="@color/colorPrimary_GREEN"
                android:textColor="@color/colorAccent_YELLOW"
                tools:layout_editor_absoluteX="157dp"
                tools:layout_editor_absoluteY="160dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="שיאים אישיים"
                android:layout_below="@id/button1"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:background="@drawable/round"
                android:backgroundTint="@color/colorPrimary_GREEN"
                android:textColor="@color/colorAccent_YELLOW"
                android:layout_marginTop="25dp"
                android:textSize="19dp"
                tools:layout_editor_absoluteX="164dp"
                tools:layout_editor_absoluteY="247dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="הצגת תחרויות"
                android:textStyle="bold"
                android:layout_below="@id/button2"
                android:layout_centerHorizontal="true"
                android:background="@drawable/round"
                android:backgroundTint="@color/colorPrimary_GREEN"
                android:textColor="@color/colorAccent_YELLOW"
                android:layout_marginTop="25dp"
                android:textSize="19dp"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="346dp" />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>